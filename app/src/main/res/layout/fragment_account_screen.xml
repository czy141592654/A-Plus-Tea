<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEF7E1"
    android:orientation="vertical"
    tools:context=".fragment.AccountScreen">

    <Button
        android:id="@+id/update_button"
        android:layout_width="332dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="#705F5C"
        android:text="UPDATE Info"
        android:textColor="#EF8E7D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_order_info" />

    <EditText
        android:id="@+id/name_editTextA"
        android:layout_width="256dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#705F5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_texteditA"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone"
        android:textColor="#705F5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_editTextA" />

    <EditText
        android:id="@+id/address_editTextA"
        android:layout_width="255dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Address"
        android:textColor="#705F5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_texteditA" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_order_info"
        android:layout_width="358dp"
        android:layout_height="304dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_editTextA" />

</androidx.constraintlayout.widget.ConstraintLayout>